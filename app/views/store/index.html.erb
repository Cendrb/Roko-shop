<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Seznam PSIM?</h1>


<% @products.each do |product| %>
	<div class="entry">
	<%= link_to(image_tag(product.image_url), line_items_path(:product_id => product), :method => "create") %>
	<h3><%= product.title %></h3>
	<%= sanitize(product.description) %>
	<div class="price_line">
		<span class="price">
			<%= number_to_currency(product.price, :locale => :cs) %>
		</span>
		<%= button_to "Přidat do košíku", line_items_path(:product_id => product), :remote => true %>
	</div>
<% end %>