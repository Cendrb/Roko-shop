<div class="depot_form">
    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <fieldset>
        <legend>
            Zadejte údaje u soudruhovi
        </legend>
        <div class="field">
            <%= f.label :name, 'Jméno' %>
            <br>
            <%= f.text_field :name, size: 40 %>
        </div>
        <div class="field">
            <%= f.label :password, 'Heslo' %>
            <br>
            <%= f.text_field :password, size: 40 %>
        </div>
        <div class="field">
            <%= f.label :password_confirmation, 'Potvrzení' %>
            <br>
            <%= f.text_field :password_confirmation, size: 40 %>
        </div>
        <div class="actions">
            <%= f.submit %>
        </div>
    </fieldset>
    <% end %>
</div>
