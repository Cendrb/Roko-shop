<!DOCTYPE html>                                       
<html>
<head>
  <title>Internetové knihkupectví Falus</title>
  <%= stylesheet_link_tag "depot" %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body id="store" >                                   
  <div id="banner" >
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatická Ivona" %>
  </div>
  <div id="columns" >                                   
    <div id="side" >
    	<div id="cart">
    		<%= render @cart %>
    		</div>
      	<%= link_to("Úvod", root_path) %><br />
		<%= link_to("Košíček!", carts_path) %>
    </div>
    <div id="main" >
      <%= yield %>
    </div>
  </div>                                                
</body>
</html>